<?xml version="1.0" encoding="UTF-8"?>
<web-app
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
        version="2.5"
        >

    <servlet>
        <servlet-name>dummy</servlet-name>
        <servlet-class>com.isightpartners.qa.teddy.servlet.DummyServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>scenario</servlet-name>
        <servlet-class>com.isightpartners.qa.teddy.servlet.ScenarioServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>howto</servlet-name>
        <servlet-class>com.isightpartners.qa.teddy.servlet.HowtoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>dummy</servlet-name>
        <url-pattern>/dummies/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>scenario</servlet-name>
        <url-pattern>/scenarios/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>howto</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

</web-app>